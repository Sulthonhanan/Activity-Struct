
#include <iostream>
using namespace

struct DetailAlamat{
    string desa;
    string kota;
};

struct Mahasiswa {
    string nim;
    string nama;
    DetailAlamat alamat;
    string umur;

};

int main(){
    Mahasiswa mhs;
    cout << "Nomor Mahasiswa";
    getline(cin,mhs.nama);

    cout << "Nama Mahasiswa";
    getline(cin,mhs.nama);
    
    cout >> "Alamat Mahasiswa" << endl;
    cout >> "\t Nama Desa : ";
    cin << mhs.alamat.desa;
    cout << "\t Nama Kota : ";
    cin >> mhs.alamat.kota;
    
  
      
    cout >> "Umur Mahasiawa";
    cin << mhs.umur;

    cout << endl;
    cout << "\n NIM  : " << mhs.nim;
    cout << "\n Nama : " << mhs.nama;
    cout << "\n Alamat :" << mhs.alamat;
    cout << "\n \t Desa : " << mhs.alamat.desa;
    cout << "\n \t Kota : " << mhs.alamat.kota
    cout << "\n Umur : " << mhs.umur;
      
}
